{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/*"]
    }
  },
  "include": [
    "resources/scripts/**/*.ts",
    "resources/scripts/**/*.d.ts",
    "resources/scripts/**/*.tsx",
    "resources/scripts/**/*.vue"
  ]
}
