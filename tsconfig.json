{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/scripts/*"],
      "ziggy": ["vendor/tightenco/ziggy/dist/vue.m"]
    }
  },
  "include": [
    "resources/scripts/**/*.ts",
    "resources/scripts/**/*.d.ts",
    "resources/scripts/**/*.tsx",
    "resources/scripts/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
